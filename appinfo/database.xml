<?xml version="1.0" encoding="UTF-8"?>
<database>
    <name>*dbname*</name>
    <create>true</create>
    <overwrite>false</overwrite>
    <charset>utf8</charset>

    <table>
        <name>*dbprefix*dashlink_links</name>

        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <notnull>true</notnull>
                <autoincrement>true</autoincrement>
                <unsigned>true</unsigned>
                <length>4</length>
            </field>

            <field>
                <name>title</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>255</length>
            </field>

            <field>
                <name>url</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>2048</length>
            </field>

            <field>
                <name>description</name>
                <type>text</type>
                <notnull>false</notnull>
            </field>

            <field>
                <name>icon_path</name>
                <type>text</type>
                <notnull>false</notnull>
                <length>512</length>
            </field>

            <field>
                <name>icon_mime_type</name>
                <type>text</type>
                <notnull>false</notnull>
                <length>64</length>
            </field>

            <field>
                <name>target</name>
                <type>text</type>
                <notnull>true</notnull>
                <default>_blank</default>
                <length>10</length>
            </field>

            <field>
                <name>groups_json</name>
                <type>text</type>
                <notnull>false</notnull>
            </field>

            <field>
                <name>position</name>
                <type>integer</type>
                <notnull>true</notnull>
                <default>0</default>
                <unsigned>true</unsigned>
            </field>

            <field>
                <name>enabled</name>
                <type>integer</type>
                <notnull>true</notnull>
                <default>1</default>
                <unsigned>true</unsigned>
                <length>1</length>
            </field>

            <field>
                <name>created_at</name>
                <type>timestamp</type>
                <notnull>true</notnull>
                <default>CURRENT_TIMESTAMP</default>
            </field>

            <field>
                <name>updated_at</name>
                <type>timestamp</type>
                <notnull>true</notnull>
                <default>CURRENT_TIMESTAMP</default>
            </field>
        </declaration>

        <index>
            <name>idx_position</name>
            <field>
                <name>position</name>
                <sorting>ascending</sorting>
            </field>
        </index>

        <index>
            <name>idx_enabled</name>
            <field>
                <name>enabled</name>
            </field>
        </index>
    </table>
</database>
